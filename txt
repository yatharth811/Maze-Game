#include <SDL2/SDL_ttf.h>

LTexture timerTexture;

TTF_Font* gFont = NULL;

init
//Initialize SDL_ttf
				if( TTF_Init() == -1 )
				{
					printf( "SDL_ttf could not initialize! SDL_ttf Error: %s\n", TTF_GetError() );
					success = false;
				}

load media
gFont = TTF_OpenFont( "assets/lazy.ttf", 32 );
    if( gFont == NULL )
    {
        printf( "Failed to load lazy font! SDL_ttf Error: %s\n", TTF_GetError() );
        success = false;
    }                

close
timerTexture.free();

	TTF_CloseFont( gFont );
    gFont = NULL;    

TTF_Quit();

main
SDL_Color textColor = { 255, 0, 0, 255 };

				stringstream timeText;

while
//Set text to be rendered
					timeText.str( "" );
					timeText << "Time: " << hours << "hrs " << minutes  << " mins " << gameTime << " secs";

					if( !timerTexture.loadFromRenderedText( timeText.str().c_str(), textColor ) )
					{
						printf( "Unable to render time texture!\n" );
					}

					timerTexture.render(SCREEN_WIDTH - timerTexture.getWidth() , 0 );
